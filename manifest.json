{
    "manifest_version": 2,
    "name": "Rick Roll Blocker",
    "short_name": "Rick Roll Blocker",
    "description": "Always be one step ahead of people who want to rickroll you.",
    "version": "1.0",
    "author": "JdM",
    "homepage_url": "https://www.rmbi.ch/jdm",
    "browser_specific_settings": {
      "gecko": {
        "id": "rickrollblocker@example.com"
      }
    },  
    "action": {
      "default_title": "Rick Roll Blocker",
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "js": [
          "content.js"
        ],
        "matches": [
          "<all_urls>"
        ],
        "run_at": "document_end"
      }
    ]
  }